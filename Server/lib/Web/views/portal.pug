extends layout

block Subject
	title= L('title')

block CSS
	link(rel='stylesheet', href='/css/in_game_kkutu.css')

block Middle
	+separator(5)
	div(style='float: left; width: 100%;')
		div(style='float: left; padding-left: 70px;')
			h3#holder= L('title').replace(/\[.+?\]/g, "")
			img#logo(src='/img/kkutu/short_logo.png')
		div#menu-bar(style='float: left; margin-top: 2px;')
			a(target='_blank', href='//cherrykkutu.kro.kr/word.txt', style='background-color: #63A95B;')= L('wordtxt')
			a(target='_blank', href='//discord.gg/RVTJ6bnZ6K', style='background-color: #0404B4;')= L('DiscordLink')
		div.jjoriping(style='margin-top: 40px;')
			img.jjoObj.jjoEyeL(src='/img/jjoeyeL.png', style='left: -270px;')
			img.jjoObj.jjoNose(src='/img/jjonose.png', style='left: -170px;')
			img.jjoObj.jjoEyeR(src='/img/jjoeyeR.png', style='left: -70px;')
			div.jjoDisplayBar(style='width: 325px; height: 85px;')
				button#game-start.jjo-display= L('gameStart')
	div(style='float: left; margin-top: 20px; width: -2%;')
		div.server-list-box
			h3.server-list-title
				a#server-refresh
					+FA('refresh')
					+Expl(L('serverRefresh'))
				label= L('serverList')
				label#server-total(style='color: #BBB; font-size: 13px;')
			div#server-list
	div(style='float: left; width: calc(100% - 4px); border: 2px solid #CCC; margin-top: 10px; background-color: #EEE;')
		iframe#kkutu-bulrealetin(width='100%', height='400px', src='/kkutu_bulletin.html')
	+separator(10)

	