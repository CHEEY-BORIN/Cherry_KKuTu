extends layout

block Subject
	title *** 체끄 관리 페이지 ***

block JS
	script(type="text/javascript", src="/js/in_user_admin.min.js")

block Middle
	fieldset
		legend 자격
		input#db-password(type='password', placeholder='암호')
		input#db-lang(placeholder='테이블')
	fieldset
		legend 끄투 공지 발송하기
		div
			input#kkutu-notice-text(placeholder='공지 발송 내용 입력')
			button#kkutu-notice-ok 전송
	fieldset
		legend 유저 DB 다루기
		div
			input#user-id(placeholder='ID')
			input#user-nick(placeholder='닉네임')
			button#user-go 조회
			div
				table
					thead: tr
						td #
						td 돈(핑)
						td kkutu
						td box
						td equip
						td nickname
						td nickChanged
						td exordial
						td server
						td lastLogin
						td warn
						td black
						td blockedUntil
						td friends
					tbody#user-data
			button#user-apply 적용
	fieldset
		legend 유저 감시하기
		div
			input#gamsi-id(placeholder='ID (,로 구분)')
			button#gamsi-go 감시
			div
				table
					thead: tr
						td #
						td 닉네임
						td 서버
					tbody#gamsi-data
